params {
	// script parameter defaults
    sim_refs = null
    num_pairs = 1_000_000
    R1 = null
    R2 = null
    refdir = null

	schema = "$baseDir/params.schema.json"
}

process {
	executor = 'local'
	cpus = 4
	memory = '8 GB'
	time = '48h'

	withName: INDEX_REFERENCE {
		executor = 'slurm'
		cpus = 2
		memory = '16 GB'
	}

	withName: ALIGN_TO_REFERENCE {
		executor = 'slurm'
		cpus = 16
		memory = '48 GB'
	}
}
